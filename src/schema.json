{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/mccalluc/hubmap/raw/master/src/schema.json",
  "title": "HuBMAP Tool Events",
  "description": "Event types for the HuBMAP Tool",
  "type": "object",
  "required": ["verb", "object"],
  "oneOf": [
    {"$ref": "#/definitions/AddCells"},
    {"$ref": "#/definitions/AddMolecules"}
  ],
  "definitions": {
    "coord": {
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "items": {
        "type": "number"
      }
    },
    "rgb": {
      "type": "array",
      "maxItems": 3,
      "minItems": 3,
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 255
      }
    },
    "AddCells": {
      "additionalProperties": false,
      "properties": {
        "verb": {
          "enum": ["AddCells"]
        },
        "object": {
          "patternProperties": {
            "^\\w": {
              "additionalProperties": false,
              "properties": {
                "boundary_poly": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/coord" }
                }
              }
            }
          }
        }
      }
    },
    "AddMolecules": {
      "additionalProperties": false,
      "properties": {
        "verb": {
          "enum": ["AddMolecules"]
        },
        "object": {
          "additionalProperties": false,
          "patternProperties": {
            "^\\w": {
              "additionalProperties": false,
              "properties": {
                "gene_id": { "type": "string" },
                "position": { "$ref": "#/definitions/coord" }
              }
            }
          }
        }
      }
    }
  }
}
