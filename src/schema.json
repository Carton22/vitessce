{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/mccalluc/hubmap/raw/master/src/schema.json",
  "title": "HuBMAP Tool Events",
  "description": "Event types for the HuBMAP Tool",
  "type": "object",
  "required": ["verb", "object"],
  "oneOf": [ {"$ref": "#/definitions/AddCells"} ],
  "definitions": {
    "AddCells": {
      "additionalProperties": false,
      "properties": {
        "verb": {
          "enum": ["AddCells"]
        },
        "object": {
          "patternProperties": {
            "^\\w": {
              "additionalProperties": false,
              "properties": {
                "boundary_poly": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "maxItems": 2,
                    "minItems": 2,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
